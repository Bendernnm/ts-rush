{
  "compilerOptions": {
    "moduleResolution": "node",
    "types": [
      "node"
    ],
    "lib": [
      "es2015"
    ],
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "preserveConstEnums": true,
    "allowUmdGlobalAccess": false
  },
  "include": [
    "src"
  ]
}
